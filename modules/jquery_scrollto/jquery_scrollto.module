/**
 * Adds the jQuery scrollto plugin to a page.
 */
function jquery_scrollto_plugin_add() {
	$path = drupal_get_path('module', 'jquery_scrollto') .'/jquery/';
  drupal_add_js($path . 'jquery.scrollTo-min.js');
}

